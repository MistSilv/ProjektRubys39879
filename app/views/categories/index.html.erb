<div class="container mt-5">
  <h1 class="text-center">Categories</h1>

  <div class="d-flex justify-content-between my-3">
    <%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
    <%= link_to 'Return to Home', root_path, class: "btn btn-secondary" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= truncate(category.description, length: 100) %></td>
        <td>
          <%= link_to 'Show', category, class: "btn btn-sm btn-info" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
