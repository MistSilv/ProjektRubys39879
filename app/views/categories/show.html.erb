<div class="container mt-5">
  <h1 class="text-center">Category Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @category.name %></h5>
      <p class="card-text">
        <strong>Description:</strong> <%= @category.description %>
      </p>
      <div class="d-flex justify-content-between">
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-warning" %>
        <%= link_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <%= link_to 'Back to Categories', categories_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
