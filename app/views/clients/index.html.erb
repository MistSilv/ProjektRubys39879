<div class="container mt-5">
  <h1 class="text-center">Clients</h1>

  <div class="d-flex justify-content-between my-3">
    <%= link_to 'New Client', new_client_path, class: "btn btn-primary" %>
    <%= link_to 'Return to Home', root_path, class: "btn btn-secondary" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.address %></td>
        <td>
          <%= link_to 'Show', client, class: "btn btn-sm btn-info" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
