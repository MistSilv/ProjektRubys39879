<div class="container mt-5">
  <h1 class="text-center">Orders</h1>

  <div class="d-flex justify-content-between my-3">
    <%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
    <%= link_to 'Return to Home', root_path, class: "btn btn-secondary" %>

  </div>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Client</th>
      <th>Total</th>
      <th>Status</th>
      <th>Actions</th>

    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client.name %></td>
        <td><%= number_to_currency(order.total, unit: "$") %></td>
        <td><%= order.status %></td>
        <td>
          <%= link_to 'Show', order, class: "btn btn-sm btn-info" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
