<div class="container mt-5">
  <h1 class="text-center">Order Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Order for <%= @order.client.name %></h5>
      <p class="card-text">
        <strong>Status:</strong> <%= @order.status %><br>
        <strong>Total Price:</strong> <%= number_to_currency(@order.total, unit: "$") %>
      </p>
    </div>
  </div>

  <h3 class="mt-4">Products in Order</h3>
  <ul class="list-group">
    <% @order.order_products.each do |order_product| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= order_product.product.name %>
        (x<%= order_product.quantity %>)
        = <%= number_to_currency(order_product.product.price * order_product.quantity, unit: "$") %>
      </li>
    <% end %>
  </ul>

  <div class="mt-3 d-flex justify-content-between">
    <%= link_to 'Edit Order', edit_order_path(@order), class: "btn btn-warning" %>
    <%= button_to 'Destroy', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back to Orders', orders_path, class: "btn btn-secondary" %>
  </div>
</div>
