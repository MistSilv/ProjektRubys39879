<div class="container mt-5">
  <h1 class="text-center">Producer Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @producer.name %></h5>
      <p class="card-text">
        <strong>Email:</strong> <%= @producer.email %><br>
        <strong>Phone:</strong> <%= @producer.phone %><br>
        <strong>Address:</strong> <%= @producer.address %>
      </p>
      <div class="d-flex justify-content-between">
        <%= link_to 'Edit', edit_producer_path(@producer), class: "btn btn-warning" %>
        <%= link_to 'Delete', @producer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <%= link_to 'Back to Producers', producers_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
