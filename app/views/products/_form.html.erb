<%= form_with(model: product, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: "Select a Category", class: "form-select") %>
  </div>

  <div class="mb-3">
    <%= form.label :producer_id, "Producer", class: "form-label" %>
    <%= form.collection_select(:producer_id, Producer.all, :id, :name, prompt: "Select a Producer", class: "form-select") %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control", step: 0.01, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit class: "btn btn-success" %>
    <%= link_to 'Cancel', products_path, class: "btn btn-secondary" %>
  </div>
<% end %>
